{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ruimtes</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Naam</th>
				<th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('objects', { 'ruimte': entity.slug }) }}">{{ entity.naam }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('objects', { 'ruimte': entity.slug }) }}" class="show children">Bekijk objecten</a>
                    </li>
				</ul>
				</td>
				<td>
				<ul>
                    <li>
                        <a href="{{ path('ruimtes_edit', { 'ruimte': entity.slug }) }}" class="edit">Bewerk</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ruimtes_new') }}" class="new">
                Maak een nieuwe ruimte aan
            </a>
        </li>
    </ul>
    {% endblock %}
