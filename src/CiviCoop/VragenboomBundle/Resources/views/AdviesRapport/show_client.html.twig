{% extends '::base.html.twig' %}

{% block body -%}

    <h1>Pas gegevens aan van {{client.displayName}}</h1>
	
	    <ul class="record_actions">
    <li>
        <a href="{{ path('adviesrapport_show', {'shortname': factory.getShortName(rapport), 'id': rapport.id}) }}">
            Terug naar rapport
        </a>
    </li>
	</ul>

    <form action="{{ path('adviesrapport_update_client', {'shortname': factory.getShortName(rapport), 'id': rapport.id, 'client_id': client.id}) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Opslaan</button>
        </p>
    </form>

{% endblock %}
