{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Adviesrapport</h1>

    <table class="record_properties adviesrapport">
        <tbody>
            <tr>
                <th>Contact</th>
                <td>{% for client in entity.clients %}
						{% if loop.index0 > 0 %}<br />{% endif %}
						{{client.displayName}}
					{% endfor %}
				</td>
				<th>Civi Dossier ID</th>
                <td>{{ entity.caseId }}</td>
            </tr>
			<tr>
                <th>VGE Adres</th>
                <td>{{ entity.vgeAdres }}</td>
                <th>VGE-Nummer</th>
                <td>{{ entity.vgeNummer }}</td>
            </tr>
			<tr>
                <th>HOV-Nummer</th>
                <td>{{ entity.hovNummer }}</td>
				<th></th>
				<td></th>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ entity.date|format_date }}</td>
            </tr>
        </tbody>
    </table>
	
	<h2>Adviezen</h2>
	<table class="record_properties adviezen">
		<tbody>
			{% for regel in entity.regels %}
				<tr>
					<th>{{regel.actie.object.ruimte.naam}}</th>
					<th>{{regel.actie.object.naam}}</th>
					<td>
						<h3>{{regel.actie.actie}}</h3>
						<p>{{regel.actie.description}}</p>
						<p>{{regel.remark}}</p>
					</td>
					<td>
						<ul class="actions">
							<li><a href="{{ path('adviesrapportregel_delete', {'rapport': entity.id, 'id': regel.id} ) }}" onclick="return confirm('Weet u het zeker?');">Verwijderen</a></li>
						</ul>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
				
	
	<ul class="record_actions">
    <li>
        <a href="{{ path('adviesrapportregel_new', {'rapport': entity.id} ) }}">
            Nieuwe regel toevoegen
        </a>
    </li>
	
	<form action="{{ path('adviesrapport_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="adviesrapport">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Opslaan</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('adviesrapport') }}">
            Terug naar overzicht.
        </a>
    </li>
</ul>
{% endblock %}
