{% extends '::layout.html.twig' %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}
	
	 {% block content_header %}
        <ul id="menu">
            {% block content_header_more %}
				{% if app.user %}
                <li><a href="{{ path('homepage') }}">Home</a></li>
				<li><a href="{{ path('ruimtes') }}">Beheer</a></li>
				{% endif %}
            {% endblock %}
			
			{% if app.user %}
			<li>Ingelogd als <strong>{{ app.user ? app.user.username : 'Anonymous' }}</strong> - <a href="{{ path('civicoop_vragenboom_logout') }}">Logout</a></li>
			{% endif %}
        </ul>

    {% endblock %}

    <div class="block">
	
		<div class="header clear-fix">
			<div class="header-logo">
				De Goede Woning - Opnamerapporten
			</div>
		</div>
	
        {% block body %}{% endblock %}
    </div>
	
{% endblock %}